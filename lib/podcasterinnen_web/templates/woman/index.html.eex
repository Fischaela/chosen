<h2>Listing Women</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Podcasts</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for woman <- @women do %>
    <tr>
      <td><%= woman.forename %> <%= woman.surname %></td>
      <td>
        <ul class="table__list">
          <%= for podcast <- woman.podcasts do %>
            <li><%= podcast %></li>
          <% end %>
        </ul>
      </td>

      <td class="text-right">
        <span><%= link "Show", to: woman_path(@conn, :show, woman), class: "btn btn-default btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= if @current_user do %>
  <%= link "New Woman", to: woman_path(@conn, :new), class: "btn btn-primary"%>
<% end %>
