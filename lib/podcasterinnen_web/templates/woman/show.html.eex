<h2>Show Woman</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @woman.forename %> <%= @woman.surname %>
  </li>

  <%= if @woman.twitter do %>
  <li>
    <a href="<%= @woman.twitter %>" target="_blank"><%= @woman.forename %> on Twitter</a>
  </li>
  <% end %>

  <li>
    <strong>Podcasts:</strong>
    <%= @woman.podcasts %>
  </li>

</ul>

<span><%= link "Edit", to: woman_path(@conn, :edit, @woman) %></span>
<span><%= link "Back", to: woman_path(@conn, :index) %></span>
